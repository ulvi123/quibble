  {
    popular:false,
    packageName:"Starter",
    price:'29.99',
    subtitle:'Features',
    btn:'Purchase Now',
    purchaseLink:'/#',
    offerlist: [
      {title: "Up to 3 User"},
      {title: "Up to 5 pitch analyses"},
      {title: "Up to 5 investor suggestions"},
      {title: "Up to 7 warm intro request"},
      {title: "Basic customer support"},
      {title: "Limited VC database access "},
    ],
  },
  {
    popular:true,
    packageName:"Pro(Ideal for mid size teams)",
    price:'59.99',
    subtitle:'Features',
    btn:'Purchase Now',
    purchaseLink:'/#',
    offerlist: [
      {title: "Up to 10 User"},
      {title: "Maximum 10 pitch analyses"},
      {title: "Up to 12 investor suggestions"},
      {title: "15 warm intro requests"},
